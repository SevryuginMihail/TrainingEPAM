<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- вывод в консоль -->
    <appender name="console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <!-- вывод в файл -->
    <appender name="fileLog"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/info.log.txt</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} - %msg%n
            </Pattern>
        </encoder>
        <!---->
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/info.%d{yyyy-MM-dd}.%i.log.txt</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <!---->
    </appender>

    <!--MainFactoryMethod-->
    <logger name="Sevryugin.creational.factory_method.MainFactoryMethod" level="info" additivity="false">
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
    </logger>
    <!--MainAbstractFactory-->
    <logger name="Sevryugin.creational.abstract_factory.MainAbstractFactory" level="info" additivity="false">
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
    </logger>
    <!--MainAdapter-->
    <logger name="Sevryugin.structural.adapter.MainAdapter" level="info" additivity="false">
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
    </logger>
    <!--MainBrigde-->
    <logger name="Sevryugin.structural.bridge.MainBridge" level="info" additivity="false">
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
    </logger>
    <!--MainStrategy-->
    <logger name="Sevryugin.behavioral.strategy.MainStrategy" level="info" additivity="false">
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
    </logger>
    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>