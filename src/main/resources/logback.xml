<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- вывод в консоль -->
    <appender name="console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <!-- вывод в файл -->
    <appender name="fileLog"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/info.log.txt</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} - %msg%n
            </Pattern>
        </encoder>
        <!---->
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/info.%d{yyyy-MM-dd}.%i.log.txt</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <!---->
    </appender>

    <!--task1-->
    <logger name="Sevryugin.task1.MainOneRaceConditional" level="info" additivity="false">
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
    </logger>
    <logger name="Sevryugin.task1.MainOneDeadlock" level="info" additivity="false">
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
    </logger>
    <!--task2-->
    <logger name="Sevryugin.task2.MainTwoRaceConditional" level="info" additivity="false">
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
    </logger>
    <logger name="Sevryugin.task2.MainTwoDeadlock" level="info" additivity="false">
        <appender-ref ref="fileLog"/>
        <appender-ref ref="console"/>
    </logger>
    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>